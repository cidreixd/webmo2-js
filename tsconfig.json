{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es2015",
    // "module": "amd",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}
